{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",

    "module": "esnext",
    "moduleResolution": "bundler", // pour Next.js 13+ avec App Router
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
  "**/*.ts",
  "**/*.tsx",
  "next-env.d.ts",
  ".next/types/**/*.ts",
  "src/types/global.d.ts"
],
  "exclude": ["node_modules"]
}
